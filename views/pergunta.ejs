<%- include('partials/head.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo%></h1>
        <p><%= pergunta.descricao%></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label for="corpo">Resposta</label>
            <textarea name="corpo" id="corpo" cols="30" rows="10" placeholder="Digite sua resposta" class="form-control"></textarea>
            <input type="hidden" name="perguntaId" value="<%=pergunta.id%>">
            <br>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
    </div>
</body>
<%- include('partials/afterbody.ejs') %>